<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="open_global_wizard_view" model="ir.ui.view">
        <field name="name">Open Global Discount</field>
        <field name="model">global.discount.wizard</field>
        <field name="arch" type="xml">
            <form string="Invoice Discount">
                <group>
                    <field name="type_discount" widget="radio" options="{'horizontal': true}"/>
                    <field name="percentage_discount_global" attrs="{'invisible': [('type_discount', '=', 'fixed')]}"
                           widget="percentage"/>
                    <field name="name" force_save="1" attrs="{'readonly': [('type_discount', '=', 'percentage')]}"/>
                    <field name="move_id" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="quantity" invisible="1"/>
                </group>
                <footer>
                    <button string="Apply" name="button_apply" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_global_discount_wizard" model="ir.actions.act_window">
        <field name="name">Open global Discount</field>
        <field name="res_model">global.discount.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="open_global_wizard_view"/>
        <field name="target">new</field>
    </record>
</odoo>
