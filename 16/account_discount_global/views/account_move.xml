<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_form_view_inherit_account_discount_global" model="ir.ui.view">
        <field name="name">account.move.form.view.inherit.account_discount_global</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="payment_reference" position="after">
                <field name="id" invisible="1"/>
                <field name="amount_discount_global" invisible="1"/>
                <field name="percentage_discount_global" invisible="1"/>
            </field>
            <field name="tax_totals" position="before">
                <!--                <field name="discount_percent_global" readonly="1"/>-->
                <!--                <field name="discount_gift_card" readonly="1"/>-->
                <button class="oe_stat_button" type="action" string="Descuento Global"
                        name="%(action_global_discount_wizard)d"
                        icon="fa-plus"
                        attrs="{'invisible': ['|',('state', 'not in', ['draft']),('move_type','not in',['out_invoice','out_refund'])]}"
                        context="{'default_move_id':id, 'default_name': discount_percent_global,'default_currency_id': currency_id,'default_percentage_discount_global': percentage_discount_global}"/>
                <field name="discount_percent_global" nolabel="1"
                       attrs="{'invisible': ['|',('state', 'not in', ['draft']),('move_type','not in',['out_invoice','out_refund'])]}"/>
            </field>
        </field>
    </record>
    <record id="product_template_form_view_inherit_account_discount_global" model="ir.ui.view">
        <field name="name">product.template.form.view.inherit.account_discount_global</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="before">
                <field name="global_discount" widget="boolean_toggle" />
                <!--                <field name="gift_card"/>-->
            </field>
        </field>
    </record>
</odoo>
